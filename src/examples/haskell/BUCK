# src/examples/haskell/BUCK
#
# Haskell examples for Buck2
#
# Demonstrates:
#   - haskell_binary: standalone executable

# Simple hello world binary
haskell_binary(
    name = "hello",
    srcs = ["Main.hs"],
    main = "Main",
    compiler_flags = ["-O2", "-Wall"],
    visibility = ["PUBLIC"],
)

# NOTE: haskell_c_library (FFI exports) requires the Mercury prelude
# See //src/examples/haskell/FFIExport.hs for the pattern
