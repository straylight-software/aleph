    "Aleph/Script/Tools/Wget.hs",
    "Aleph/Script/Tools/Xargs.hs",
    "Aleph/Script/Tools/Zoxide.hs",
    "Aleph/Script/Vfio.hs",
    "Aleph/Script/Vm.hs",
    "Aleph/Script/Vm/Config.hs",
]

# Packages required by Aleph.Script (from ghcWithPackages in devshell)
ALEPH_SCRIPT_PACKAGES = [
    "-package", "text",
    "-package", "shelly",
    "-package", "foldl",
    "-package", "aeson",
    "-package", "dhall",
    "-package", "directory",
    "-package", "filepath",
    "-package", "bytestring",
    "-package", "megaparsec",
    "-package", "crypton",
    "-package", "memory",
    "-package", "unordered-containers",
    "-package", "vector",
    "-package", "unix",
    "-package", "async",
    "-package", "process",
    "-package", "containers",
    "-package", "transformers",
    "-package", "mtl",
    "-package", "time",
]

# Core library - Aleph.Script for shell scripting
haskell_library(
    name = "aleph-script",
    srcs = SCRIPT_SRCS,
    compiler_flags = [
        "-O2",
        "-Wall",
        "-Wno-unused-imports",
    ] + ALEPH_SCRIPT_PACKAGES,
    # Expose packages to dependents
    linker_flags = ALEPH_SCRIPT_PACKAGES,
    visibility = ["PUBLIC"],
)
