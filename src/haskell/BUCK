# src/haskell/BUCK
#
# Aleph Haskell library - typed scripting and Nix package generation.
#
# Modules:
#   Aleph.Script    - Batteries-included shell scripting (shelly + turtle ergonomics)
#   Aleph.Nix       - Typed Nix package generation (for builtins.wasm)
#
# Dependencies come from ghcWithPackages in the Nix devshell.

# Aleph.Script source files (explicit list, no globs per WSN lint rules)
SCRIPT_SRCS = [
    "Aleph/Script.hs",
    "Aleph/Script/Clap.hs",
    "Aleph/Script/Config.hs",
    "Aleph/Script/Getopt.hs",
    "Aleph/Script/Nvidia/Config.hs",
    "Aleph/Script/Nvidia/Container.hs",
    "Aleph/Script/Nvidia/Versions.hs",
    "Aleph/Script/Nvidia/Wheel.hs",
    "Aleph/Script/Oci.hs",
    "Aleph/Script/Tools.hs",
    "Aleph/Script/Tools/Bat.hs",
    "Aleph/Script/Tools/Bwrap.hs",
    "Aleph/Script/Tools/CMake.hs",
    "Aleph/Script/Tools/Crane.hs",
    "Aleph/Script/Tools/Deadnix.hs",
    "Aleph/Script/Tools/Delta.hs",
    "Aleph/Script/Tools/Dust.hs",
    "Aleph/Script/Tools/Fd.hs",
    "Aleph/Script/Tools/Find.hs",
    "Aleph/Script/Tools/Grep.hs",
    "Aleph/Script/Tools/Gzip.hs",
    "Aleph/Script/Tools/Hyperfine.hs",
    "Aleph/Script/Tools/Jq.hs",
    "Aleph/Script/Tools/Ls.hs",
    "Aleph/Script/Tools/Rg.hs",
    "Aleph/Script/Tools/Rsync.hs",
    "Aleph/Script/Tools/Sed.hs",
    "Aleph/Script/Tools/Statix.hs",
